<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/song_item"
    android:background="?attr/colorItem"
    android:layout_marginBottom="1dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/song_item_img"
        android:padding="5dp"
        android:backgroundTint="?attr/colorItem"
        android:src="@drawable/ic_music_record"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_item_title"
        android:layout_toEndOf="@id/song_item_img"
        android:text="Title"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</RelativeLayout>